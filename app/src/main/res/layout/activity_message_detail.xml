<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:contentPadding="24dp"
                app:cardCornerRadius="@dimen/context_menu_corner_radius"
                app:cardBackgroundColor="@color/compose_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="File Id:\n12378965485235985214"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="match_parent"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:columnCount="2"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="File Type:\n.PNG"
                            android:layout_marginTop="16dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="File Size:\n6mb"
                            android:layout_marginTop="16dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Resolution:\n550x550"
                            android:layout_marginTop="16dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Duration:\nN/A"
                            android:layout_marginTop="16dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"/>


                    </GridLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/context_menu_corner_radius"
                app:cardBackgroundColor="@color/compose_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/message_details_header__sent"
                        android:gravity="end"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sent_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="Jan 18, 2015, 12:29:37 AM GMT-08:00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/message_details_header__received"
                        android:gravity="end"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/received_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="Jan 18, 2015, 12:29:37 AM GMT-08:00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/message_details_header__disappears"
                        android:gravity="end"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/expires_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:text="1 week"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/message_details_header__error"
                        android:gravity="end"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/error_message"
                        android:textColor="@color/danger_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:textIsSelectable="true"
                        tools:text="Send Failed"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/message_details_header__from"
                        android:gravity="end"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <org.thoughtcrime.securesms.components.AvatarImageView
                            android:layout_gravity="center"
                            android:layout_marginEnd="16dp"
                            android:layout_width="46dp"
                            android:layout_height="46dp"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Connor"
                                android:fontFamily="@font/space_mono_regular"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="d4f1g54sdf5g1d5f4g65ds4564df65f4g65d54gdfsg"
                                android:fontFamily="@font/space_mono_regular"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/context_menu_corner_radius"
                app:cardBackgroundColor="@color/compose_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:background="?selectableItemBackground"
                        android:id="@+id/reply_button"
                        android:textColor="?android:textColorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/large_button_height"
                        android:gravity="start|center_vertical"
                        style="@style/Widget.Session.Button.Common.ProminentOutline"
                        android:text="@string/conversation_context__menu_reply"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:drawableTint="?android:textColorPrimary"
                        app:drawableStartCompat="@drawable/ic_baseline_reply_24"/>

                    <View
                        android:background="@color/classic_dark_3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"/>

                    <TextView
                        android:background="?selectableItemBackground"
                        android:id="@+id/resend_button"
                        android:textColor="?android:textColorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/large_button_height"
                        android:gravity="start|center_vertical"
                        style="@style/Widget.Session.Button.Common.ProminentOutline"
                        android:text="@string/message_recipients_list_item__resend"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:drawableTint="?android:textColorPrimary"
                        app:drawableStartCompat="@drawable/ic_refresh"/>

                    <View
                        android:background="@color/classic_dark_3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"/>

                    <TextView
                        android:background="?selectableItemBackground"
                        android:textColor="@color/destructive"
                        android:id="@+id/delete_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/large_button_height"
                        android:paddingHorizontal="20dp"
                        android:gravity="start|center_vertical"
                        style="@style/Widget.Session.Button.Common.ProminentOutline"
                        android:text="@string/delete"
                        android:drawablePadding="20dp"
                        app:drawableStartCompat="@drawable/ic_delete_24" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>
    </LinearLayout>
</ScrollView>
